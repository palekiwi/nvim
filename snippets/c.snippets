########################
#       include        #
########################
snippet io "include <stdio.h>"
	#include <stdio.h>

snippet il "include <stdlib.h>"
	#include <stdlib.h>

########################
#     expressions      #
########################
snippet if "if"
	if ($1) {
		$0
	}

snippet ret "return"
	return $0;

snippet switch "switch"
	switch ($1) {
		case $2:
			$3;
	}

snippet for "for"
	for ($1; $2; $3) {
		$0
	}

snippet while "while"
	while ($1) {
		$0
	}
